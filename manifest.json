{
  "manifest_version": 3,
  "name": "Stupify - AI That Speaks Human",
  "version": "1.0.0",
  "description": "Highlight any text, get instant simple explanations. AI-powered learning made effortless.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "Stupify"
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "contextMenus",
    "sidePanel",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://stupify.app/*",
    "https://*.supabase.co/*"
  ],
  "commands": {
    "simplify-selection": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Simplify selected text with Stupify"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "images/*", "onboarding.html"],
      "matches": ["<all_urls>"]
    }
  ]
}